<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBg"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/keyOne"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="1"
        android:gravity="center"
        style="@style/text_size30_style"
        android:background="@drawable/btn_num_menu"
        android:elevation="1dp"
        android:translationZ="-1dp"/>
    <TextView
        android:id="@+id/keyTwo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2"
        android:gravity="center"
        style="@style/text_size30_style"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_num_menu"
        android:elevation="1dp"
        android:translationZ="-1dp"/>
    <TextView
        android:id="@+id/keyThree"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="3"
        android:gravity="center"
        style="@style/text_size30_style"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_num_menu"
        android:elevation="1dp"
        android:translationZ="-1dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/keyFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:gravity="center"
            style="@style/text_size30_style"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
        <TextView
            android:id="@+id/keyFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:gravity="center"
            style="@style/text_size30_style"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
        <TextView
            android:id="@+id/keySix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:gravity="center"
            style="@style/text_size30_style"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/keySeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:gravity="center"
            style="@style/text_size30_style"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
        <TextView
            android:id="@+id/keyEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:gravity="center"
            style="@style/text_size30_style"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
        <TextView
            android:id="@+id/keyNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:gravity="center"
            style="@style/text_size30_style"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/keyDel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:gravity="center"
            style="@style/text_size30_style"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/btn_function_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
        <TextView
            android:id="@+id/keyZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            style="@style/text_size30_style"
            android:background="@drawable/btn_num_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>

        <TextView
            android:id="@+id/keySure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            style="@style/text_size30_style"
            android:layout_marginLeft="5dp"
            android:textColor="@color/ColorWhite"
            android:background="@drawable/btn_function_menu"
            android:elevation="1dp"
            android:translationZ="-1dp"/>
    </LinearLayout>
</LinearLayout>
