<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBg"
    android:orientation="vertical">
    <com.hhzb.fntalm.view.TopBar
        android:id="@+id/titletop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_hight"
        android:background="@color/ColorMain"
        topbar:titleText="数据管理"
        topbar:leftBackground="@mipmap/fanhui">
    </com.hhzb.fntalm.view.TopBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:background="@color/ColorWhite"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/data_backputs"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="数据备份"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/data_admin"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="账号管理"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/data_input"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="INPUT"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/data_backput"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="BACKINPUT"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp">
                <FrameLayout
                    android:id="@+id/fl_child_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
