<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员添加"
        android:layout_marginTop="10dp"
        android:textColor="@color/ColorBlack"
        style="@style/text_size30_style"/>
    <TextView
        android:id="@+id/dialog_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认添加为口令账号"
        android:layout_marginTop="5dp"
        style="@style/text_size18_style"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型:"
            style="@style/text_size30_style"/>
        <RadioGroup
            android:id="@+id/admin_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/male">
            <RadioButton
                android:id="@+id/kouling"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="口令"
                android:checked="true"
                style="@style/text_size30_style"/>
            <RadioButton
                android:id="@+id/shouji"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="手机"
                style="@style/text_size30_style"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            style="@style/text_size30_style"/>

        <EditText
            android:id="@+id/admin_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/text_size30_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_tip_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            style="@style/text_size30_style"
            />
        <EditText
            android:id="@+id/admin_pass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:hint="输入密码"
            style="@style/text_size30_style"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用状态:"
            style="@style/text_size30_style"/>
        <CheckBox
            android:id="@+id/canused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="禁用"
            style="@style/text_size30_style"/>
    </LinearLayout>
</LinearLayout>
